---
import Link from './CardLink.astro'
import Text from '../ui/Paragraph.astro'
import Name from '../ui/Subtitle.astro'

const { name, description, linkRepo, languages, tools } = Astro.props
---

<div
  class="w-full rounded-2xl border-2 border-spicy-paprika-500 bg-carbon-black-950 p-3 lg:w-fit lg:max-w-1/3"
>
  <Name>{name}</Name>
  <Text>{description}</Text>

  <hr class="mt-3 mb-2 h-0.5 text-spicy-paprika-500" />

  <Text>
    <span class="text-spicy-paprika-500">Languages:</span>
    {languages}
  </Text>
  <Text>
    <span class="text-spicy-paprika-500">Tools / Frameworks:</span>
    {tools}
  </Text>

  <hr class="mt-3 mb-2 h-0.5 text-spicy-paprika-500" />

  <div class="flex justify-center">
    <Link
      text="View repo"
      link={linkRepo}
    />
  </div>
</div>
