---
import '../styles/global.css'

import DropElem from '../compontents/drop-element.astro'
import Link from '../compontents/link.astro'

import { Icon } from 'astro-icon/components'
---

<header>
  <div class="bg-spicy-paprika-500 flex justify-center items-center p-4 gap-5">
    <a
      href="https://github.com/Sckab"
      class="select-none cursor-pointer"
    >
      <img
        src="/favicon.svg"
        alt="Sckab pfp"
        class="size-24 rounded-full outline-3 outline-carbon-black-900 outline-offset-2"
      />
    </a>

    <h1 class="font-inter text-carbon-black-900 font-bold text-5xl select-none">
      SCKAB PORTFOLIO
    </h1>
  </div>

  <nav class="bg-spicy-paprika-400 flex justify-center items-center h-fit">
    <ul>
      <li>
        <div
          x-data="{ open: false }"
          @click.outside="open = false"
          class="relative"
        >
          <button
            class="flex flex-row justify-center items-center gap-2 p-1 cursor-pointer select-none"
            @click="open = !open"
          >
            <Icon
              name="mdi:envelope"
              class="text-carbon-black-900 text-3xl"
            />

            <span class="text-xl text-carbon-black-900 font-bold">
              Contacts
            </span>
          </button>

          <div
            x-show="open"
            class="absolute top-full bg-spicy-paprika-400 p-3 rounded-br-lg rounded-bl-lg flex flex-row justify-between"
          >
            <div class="text-carbon-black-900 font-bold flex flex-row">
              <div class="flex flex-col">
                <DropElem>
                  <Icon
                    name="mdi:github"
                    class="text-xl"
                  />

                  <Link
                    link="https://github.com/Sckab"
                    text="Github"
                  />
                </DropElem>
                <DropElem>
                  <Icon
                    name="simple-icons:leetcode"
                    class="text-xl"
                  />

                  <Link
                    link="https://leetcode.com/u/Sckab"
                    text="LeetCode"
                  />
                </DropElem>
                <DropElem>
                  <Icon
                    name="akar-icons:discord-fill"
                    class="text-xl"
                  />

                  <Link
                    link="https://discord.gg/RVX6RRqkt5"
                    text="Discord"
                  />
                </DropElem>
              </div>
            </div>
          </div>
        </div>
      </li>
    </ul>
  </nav>
</header>
